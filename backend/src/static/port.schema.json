{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "tags": {
      "type": "array",
      "description": "List of tags",
      "items": {
        "type":"object",
        "description": "Tag",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the tag"
          },
          "type": {
            "type": "string",
            "description": "The type of the tag",
            "default": "custom"
          },
          "priority": {
            "type": "integer",
            "description": "The priority of the tag for ordering",
            "default": 0
          }
        }
      },
      "additionalProperties": false
    }
  },
  "type": "object",
  "oneOf": [
    {
      "required": [
        "workspaceId"
      ]
    },
    {
      "required": [
        "workspace"
      ]
    }
  ],
  "required": [
    "courses"
  ],
  "additionalProperties": false,
  "properties": {
    "courseOrder": {
      "type":"array",
      "description": "Order of courses",
      "uniqueItems": true,
      "examples": [
        "[\"cjxk1l6uf001707606jgv7f9z\", \"cjdk1l6uf0017076g6jg47f9z\"]"
      ]
    },
    "projectId": {
      "type": "string",
      "description": "ID of a project",
      "pattern": "[0-9a-z]{25}",
      "examples": [
        "cjxk1l6uf001707606jgv7f9z"
      ],
      "minLength": 1
    },
    "workspaceId": {
      "type": "string",
      "description": "Existing workspace ID to use",
      "pattern": "[0-9a-z]{25}",
      "examples": [
        "cjxk1l6uf001707606jgv7f9z"
      ],
      "minLength": 1
    },
    "workspace": {
      "type": "string",
      "description": "Name to set for new workspace",
      "examples": [
        "Tietojenk√§sittelytieteen kandiohjelma"
      ],
      "minLength": 1
    },
    "courseTags": {
      "$ref": "#/definitions/tags"
    },
    "conceptTags": {
      "$ref": "#/definitions/tags"
    },
    "courses": {
      "type": "array",
      "description": "List of courses in workspace",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "description": "Course object",
        "required": [
          "name",
          "concepts"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of course",
            "examples": [
              "Ohjelmoinnin perusteet"
            ],
            "minLength": 1
          },
          "official": {
            "type": "boolean",
            "description": "Whether or not the course is official, rather than user-specified",
            "examples": [
              true
            ]
          },
          "tags": {
            "$ref": "#/definitions/tags"
          },
          "prerequisites": {
            "type": "array",
            "description": "List of prerequisite courses for this course",
            "items": {
              "type": "object",
              "description": "Course prerequisite name",
              "required": [
                "name"
              ],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "description": "The name of the prerequisite concept",
                  "examples": [
                    "Ehtolause"
                  ],
                  "minLength": 1
                },
                "official": {
                  "type": "boolean",
                  "description": "Whether or not the course prerequisite link is official, rather than user-specified",
                  "examples": [
                    true
                  ]
                }
              }
            }
          },
          "concepts": {
            "type": "array",
            "description": "List of concepts in course",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "description": "Concept object",
              "required": [
                "name"
              ],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of concept",
                  "examples": [
                    "Toistolause",
                    "Ehtolause"
                  ],
                  "minLength": 1
                },
                "tags": {
                  "$ref": "#/definitions/tags"
                },
                "official": {
                  "type": "boolean",
                  "description": "Whether or not the concept is official, rather than user-specified",
                  "examples": [
                    true
                  ]
                },
                "description": {
                  "type": "string",
                  "description": "Description for concept"
                },
                "prerequisites": {
                  "type": "array",
                  "description": "List of prerequisite concepts for this concept",
                  "items": {
                    "type": "object",
                    "description": "Concept prerequisite name",
                    "required": [
                      "name"
                    ],
                    "additionalProperties": false,
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "The name of the prerequisite concept",
                        "examples": [
                          "Ehtolause"
                        ],
                        "minLength": 1
                      },
                      "course": {
                        "type": "string",
                        "description": "The name of the course where the prerequisite concept exists. If not specified, all concepts with the given name will be linked.",
                        "examples": [
                          "Ohjelmoinnin perusteet"
                        ]
                      },
                      "official": {
                        "type": "boolean",
                        "description": "Whether or not the prerequisite link is official, rather than user-specified",
                        "examples": [
                          true
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "conceptOrder": {
            "type":"array",
            "description": "Order of concepts",
            "uniqueItems": true,
            "examples": [
              "[\"cjxk1l6uf0311707606jgv7f9z\", \"cjdk1l213f0017076g6jg47f9z\"]"
            ]
          }
        }
      }
    }
  }
}
